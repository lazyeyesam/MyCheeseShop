@page "/cart"
@inject ShoppingCart ShoppingCart

<h3>Cart</h3>

@if (ShoppingCart.Count() == 0)
{
    <p>Your cart is empty</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ShoppingCart.GetItems())
            {
                <tr>
                    <td>@item.Cheese.Name</td>
                    <td>@item.Cheese.Price.ToString("C")</td>
                    <td>@(item.Quantity*100)g</td>
                    <td>@((item.Cheese.Price * item.Quantity).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>
}


